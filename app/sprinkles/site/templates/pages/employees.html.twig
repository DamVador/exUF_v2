{% extends 'pages/abstract/dashboard.html.twig' %}

{% block page_title %}Companies{% endblock %}
{% block page_description %}This page provides a list of companies{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-cutlery fa-fw"></i> List of Companies</h3>
                    <div class="text-right">
                        <a href="" class="btn btn-success btn-rounded" data-toggle="modal" data-target="#modalLoginForm">
                            <i class="fas fa-plus-square"> Create Company</i>
                        </a>
                    </div>              
                </div>
                <div class="box-body">
                        <table class="table table-bordered">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Company</th>
                        </tr>
                        {% for employee in employees %}
                            <tr>
                                <td>{{employee.first_name}}</td>
                                <td>{{employee.last_name}}</td>
                                <td><img src={{employee.email}} alt="logo" width="100" height="100"></td>
                                <td>{{company.phone_number}}</td>
                                <td>
                                    <a href="" class='btn btn-info m-r-1em'>Read</a>
                                    <a href="" class='btn btn-primary m-r-1em'>Edit</a>
                                    <a href=""  class='btn btn-danger'>Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block scripts_page %}
    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}
{% endblock %}