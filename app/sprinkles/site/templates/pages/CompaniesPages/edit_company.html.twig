{% extends "pages/abstract/dashboard.html.twig" %}


{% block page_title %}Update information of {{company.company_name}}{% endblock %}

{% block body_matter %}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form id="update" action="{{site.uri.public}}/companies/{{company.id}}/update" method="post">
            {% include "forms/csrf.html.twig" %}
            <div class="form-group has-feedback">
                <label>Company</label>
                <input type="text" class="form-control" name="company_name" value="{{company.company_name}}">
            </div>
            <div class="form-group has-feedback">
                <label>Email</label>
                <input type="text" class="form-control" name="email" value="{{company.email}}">
            </div>
            <div class="form-group has-feedback">
                <label>Logo</label>
                <input type="text" class="form-control" name="logo" value="{{company.logo}}">
            </div>
            <div class="form-group has-feedback">
                <label>Website</label>
                <input type="text" class="form-control" name="website" value="{{company.website}}">
            </div>
            <div class="row">
                <div class="col-xs-8">
                </div>
                <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}