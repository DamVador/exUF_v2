{% extends 'pages/abstract/dashboard.html.twig' %}

{% block page_title %}Employees{% endblock %}
{% block page_description %}This page provides a list of employees{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                     <h3 class="box-title"><i class="fa fa-cutlery fa-fw"></i> List of Employees</h3>
                                
                </div>
                <div class="box-body">
                        <table class="table table-bordered table-striped">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                        {% for employee in employees %}
                            <tr>
                                <td>{{employee.first_name}}</td>
                                <td>{{employee.last_name}}</td>
                                <td>{{employee.email}}</td>
                                <td>{{employee.phone_number}}</td>
                                <td> 
                                    <a href="{{site.uri.public}}/companies/{{employee.company_id}}" class='btn btn-info m-r-1em'>Company</a>
                                    <a href="{{site.uri.public}}/companies/{{employee.company_id}}/employee/{{employee.id}}" class='btn btn-primary m-r-1em'>Read</a>
                                    <a href="{{site.uri.public}}/companies/{{employee.company_id}}/employee/{{employee.id}}/edit" class='btn btn-warning m-r-1em'>Edit</a>
                                    <a href="{{site.uri.public}}/employees/{{employee.id}}/delete"  class='btn btn-danger'>Delete</a>

                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
{% block scripts_page %}
    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}
{% endblock %}