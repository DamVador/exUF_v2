{% extends 'pages/abstract/dashboard.html.twig' %}

{# Overrides blocks in head of base template #}
{% block page_title %}Companies{% endblock %}
{% block page_description %}This page provides a list of companies{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-cutlery fa-fw"></i> List of Companies</h3>
                    <div class="text-right">
                        <a href="" class="btn btn-success btn-rounded" data-toggle="modal" data-target="#modalLoginForm">
                            <i class="fas fa-plus-square"> Create Company</i>
                        </a>
                    </div>              
                </div>
                <div class="box-body">
                        <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>email</th>
                            <th>logo</th>
                            <th>website</th>
                            <th>Actions</th>
                        </tr>
                        {% for company in companies %}
                            <tr>
                                <td>{{company.company_name}}</td>
                                <td>{{company.email}}</td>
                                <td><img src={{company.logo}} alt="logo" width="100" height="100"></td>
                                <td><a href="{{company.website}}">{{company.website}}</a></td>
                                <td>
                                    <a href="{{site.uri.public}}/companies/{{company.id}}/employees" class='btn btn-info m-r-1em'>Read</a>
                                    <a href="{{site.uri.public}}/companies/{{company.id}}/edit" class='btn btn-primary m-r-1em'>Edit</a>
                                    <a href="{{site.uri.public}}/companies/delete/{{company.id}}"  class='btn btn-danger'>Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Create</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <form action="{{site.uri.public}}/companies" method="post" >
                        {% include "forms/csrf.html.twig" %}
                        <div class="form-group has-feedback">
                            <label>Company Name</label>
                            <input type="text" class="form-control" name="company_name">
                        </div>
                        <div class="form-group has-feedback">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group has-feedback">
                            <label>Link for logo</label>
                            <input type="text" class="form-control" name="logo">
                        </div>
                        <div class="form-group has-feedback">
                            <label>Website</label>
                            <input type="text" class="form-control" name="website">
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                            </div>
                            <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Create Company</button>
                            </div>
                        </div>
                    </form>
                </div>  
            </div>
        </div>
    </div>


{% endblock %}
{% block scripts_page %}
    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}
{% endblock %}