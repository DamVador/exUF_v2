{% extends 'pages/abstract/dashboard.html.twig' %}

{# Overrides blocks in head of base template #}
{% block page_title %}Companies{% endblock %}
{% block page_description %}This page provides a list of companies{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-cutlery fa-fw"></i> List of Companies</h3>
                </div>
                <div class="box-body">
                        <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>email</th>
                            <th>logo</th>
                            <th>website</th>
                            <th>Actions</th>
                        </tr>
                        {% for company in companies %}
                            <tr>
                                <td>{{company.company_name}}</td>
                                <td>{{company.email}}</td>
                                <td><img src={{company.logo}} alt="logo" width="100" height="100"></td>
                                <td>{{company.website}}</td>
                                <td>
                                    <a href="{{site.uri.public}}/companies/{company_name}" class='btn btn-info m-r-1em'>Read</a>
                                    <a href='#' class='btn btn-primary m-r-1em'>Edit</a>
                                    <a href='#' onclick='delete({company_name});'  class='btn btn-danger'>Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}